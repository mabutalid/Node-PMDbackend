{
  "name": "newdevpmd",
  "version": "1.0.0",
  "description": "Node PMD",
  "main": "index.js",
  "scripts": {
    "start": "nodemon app.js",
    "test-debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test": "env-cmd ./config/test.env jest --detectOpenHandles --coverage --watch",
    "dev": "env-cmd ./config/dev.env nodemon",
    "test-sync": "env-cmd ./config/test.env node ./util/sync.js",
    "dev-sync": "env-cmd ./config/dev.env  node ./util/sync.js"
  },
  "author": "Marco Butalid",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.0",
    "mysql2": "^2.1.0",
    "sequelize": "^6.3.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "env-cmd": "^8.0.2",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "jest":{
    "collectCoverage": true,
    "coverageReporters": ["lcov"],
    "coverageDirectory": "./output/code-coverage/",
    "testEnvironment": "node",
    "reporters":["./node_modules/jest-html-reporter"],
    "coveragePathIgnorePatterns": [
      "/node_modules"
    ]
  }
}
